<%- include("partials/header.ejs") %>
<div class="box" id="heading">
  <h1> <%= listTitle %> </h1>
</div>

<div class="box">
  <% newlistItems.forEach(item => { %>
    <form action="/delete" method="post">
      <div class="item">
          <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()"> <!--onchange="this.form.submit()" formun tetiklenmesini sağlar.-->
          <p> <%= item.name %> </p>
      </div>
      <input type="hidden" value="<%= listTitle %>"></input> <!--Gizli öğe today dışında bir listenin öğesini silmek için-->
    </form>
  <% }); %>
  <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item" value="" autocomplete="off">
      <button type="submit" name="list" value="<%= listTitle %>">+</button>
      <!--value=" listTitle " yazılmasının sebebi her öğeyi kaydettiğimizde today listesine gelip kaydetmemesi için. -->
  </form>

</div>
<%- include("partials/footer.ejs") %>
